<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">

    <body>
        <referenceBlock name="customer_form_login">
            <block name="recaptcha_validation_customer_login"
                   template="Magento_ReCaptchaFrontendUi::js/script_token.phtml"
                   ifconfig="recaptcha_frontend/type_for/customer_login">
                <arguments>
                    <argument name="viewModelStoreConfig" xsi:type="object">Hyva\Theme\ViewModel\StoreConfig</argument>
                </arguments>
            </block>
        </referenceBlock>
        <referenceContainer name="form.customer_login.info">
            <block class="Magento\ReCaptchaUi\Block\ReCaptcha"
                   name="recaptcha_customer_login"
                   after="-"
                   template="Magento_ReCaptchaFrontendUi::recaptcha.phtml"
                   ifconfig="recaptcha_frontend/type_for/customer_login">
                <arguments>
                    <argument name="recaptcha_for" xsi:type="string">customer_login</argument>
                </arguments>
            </block>
        </referenceContainer>
        <referenceContainer name="form.customer_login.after">
            <block name="recaptcha_legal_notice_customer_login"
                   template="Magento_ReCaptchaFrontendUi::legal_notice.phtml"
                   ifconfig="recaptcha_frontend/type_for/customer_login">
            </block>
        </referenceContainer>
        <referenceContainer name="before.body.end">
            <block name="recaptcha_base" template="Magento_ReCaptchaFrontendUi::js/script_loader.phtml"
                   ifconfig="recaptcha_frontend/type_for/customer_login">
                <arguments>
                    <argument name="viewModelStoreConfig" xsi:type="object">Hyva\Theme\ViewModel\StoreConfig</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
